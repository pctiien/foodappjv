<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingVertical="10dp"
    android:background="#F5F5F8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:weightSum="2.5"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <RelativeLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginRight="-5dp"
                android:padding="5dp"
                android:layout_weight="1.05"
                android:src="@drawable/favorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginRight="-5dp"
                android:padding="5dp"
                android:layout_weight="1.05"
                android:src="@drawable/trash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/cartlayout"
        android:padding="15dp"
        android:background="@drawable/shadow_recyc"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgfood_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.25"
            android:scaleType="centerCrop"
            app:riv_corner_radius="100dp" />

        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:layout_weight="2.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="2.0"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1.0"
                    android:fontFamily="@font/avenirblack"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:id="@+id/foodname_cart"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1.0"
                    android:fontFamily="@font/avenir_roman"
                    android:gravity="center_vertical"
                    android:id="@+id/pricefood_cart"
                    android:textSize="12sp"
                    android:textColor="@color/orange"
                    android:text="price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

                <RelativeLayout
                    android:layout_weight="2.25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        app:cardCornerRadius="200dp"
                        android:backgroundTint="#9EDFA1"
                        android:id="@+id/subtract_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp">
                        <TextView
                            android:textColor="@color/green_dark"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_above="@id/plus_button"
                        android:textColor="@color/black"
                        android:layout_below="@id/subtract_button"
                        android:layout_gravity="center"
                        android:textSize="8sp"
                        android:text="count"
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="#9EDFA1"
                        app:cardCornerRadius="200dp"
                        android:id="@+id/plus_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp">
                        <TextView
                            android:textColor="@color/green_dark"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="+"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>