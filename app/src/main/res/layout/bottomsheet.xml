<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_alignParentBottom="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:id="@+id/navigation"
    android:layout_width="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable = "false"
    app:behavior_peekHeight = "35dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:id="@+id/orangenavigation"
        android:orientation="vertical"
        android:background="@drawable/bottome"
        android:layout_height="250dp"
        android:layout_width="match_parent">
        <TextView
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Order detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginHorizontal="160dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@id/orangenavigation"
        android:orientation="vertical"
        android:background="@drawable/radiustop"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:gravity="left"
                    android:textSize="12sp"
                    android:text="Quantity"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:textSize="12sp"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:id="@+id/soluong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:gravity="left"
                    android:textSize="12sp"
                    android:text="Item total"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/itemtotal"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:gravity="left"
                    android:textSize="12sp"
                    android:text="Delivery charge"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/deliverycharge"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/allprice"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="25dp"
                android:paddingVertical="15dp"
                android:backgroundTint="@color/green_dark"
                android:id="@+id/cartActivity_payment"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:text="Payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>