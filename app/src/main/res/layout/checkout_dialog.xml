<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="30dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:background="@drawable/white_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:background="@drawable/grey_topradius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Please note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:text="Note your address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/checkout_DialogEdt"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/checkout_DialogWarning"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:text="***Your address must contain characters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingHorizontal="30dp"
            android:weightSum="2.0"
            android:paddingVertical="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/checkout_DialogCancel"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:layout_weight="1.0"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/checkout_DialogProceed"
                android:text="Proceed"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/state_buttoncomple"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>