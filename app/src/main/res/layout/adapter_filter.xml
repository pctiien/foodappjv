<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="10dp"
    android:background="@drawable/radius_stroke_layout"
    android:layout_width="150dp"
    android:layout_height="250dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius_top_left="15dp"
            app:riv_corner_radius_top_right="15dp"
            android:scaleType="fitXY"
            android:id="@+id/filter_img"
            android:layout_width="150dp"
            android:layout_height="140dp"/>
        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/nunito_light"
            android:textColor="@color/black_nobold"
            android:gravity="center"
            android:layout_below="@id/filter_img"
            android:id="@+id/filter_name"
            android:text="Strawberry"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <RelativeLayout
            android:layout_above="@id/sub_add"
            android:layout_below="@id/filter_name"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:textStyle="normal"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/black_nobold"
                android:layout_alignParentLeft="true"
                android:id="@+id/filter_price"
                android:text="$10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/price_star"
                android:layout_width="wrap_content"
                android:layout_height="15dp">
                <TextView
                    android:id="@+id/filter_rating"
                    android:textStyle="normal"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    android:layout_toLeftOf="@id/star"
                    android:text="4.8"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:foregroundGravity="center"
                    android:layout_alignParentRight="true"
                    android:id="@+id/star"
                    android:src="@drawable/icon_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/sub_add"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/filter_sub"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="7dp"
                android:backgroundTint="#ea7173"
                android:layout_width="25dp"
                android:layout_height="25dp">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/filter_add"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="7dp"
                android:backgroundTint="#4ab7b6"
                android:layout_width="25dp"
                android:layout_height="25dp">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>