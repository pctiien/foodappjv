<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_above="@+id/addtocartlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layout_imgfooddetail"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imgfood_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:alpha="0.35"
                        android:background="@drawable/radius_black_layout"
                        android:src="@drawable/backbuttonicon"
                        app:riv_corner_radius="200dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:padding="5dp"
                            android:alpha="0.8"
                            android:src="@drawable/backbuttonicon"
                            app:riv_corner_radius="200dp"
                            android:id="@+id/back_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/detail_previousVPG"
                            android:alpha="0.85"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/icon_previous"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/detail_nextVPG"
                            android:alpha="0.85"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_next"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                        <LinearLayout
                            android:paddingHorizontal="2dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/radius_number"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/currentPos"
                                android:textSize="10sp"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:text="14"
                                android:textColor="@color/grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="/"
                                android:textColor="@color/grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/totalItem"
                                android:textSize="10sp"
                                android:gravity="left"
                                android:layout_weight="1"
                                android:textColor="@color/grey"
                                android:text="15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:paddingHorizontal="15dp"
                android:layout_below="@id/layout_imgfooddetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/fooddetail"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingVertical="10dp"
                        android:weightSum="1.0"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="left"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/avenir_roman"
                            android:layout_gravity="center"
                            android:id="@+id/fooddetail_name"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:text="name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/fooddetail_price"
                            android:gravity="right"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/avenirblack"
                            android:layout_gravity="center"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:paddingVertical="10dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/sloganfood_detail"
                        android:text="\\des"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/gotham_medium"
                            android:paddingTop="20dp"
                            android:textAllCaps="true"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Đánh giá sản phẩm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/details_successComment"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/tick_orange"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:paddingLeft="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:textStyle="normal"
                                    android:textColor="@color/orange"
                                    android:text="Bình luận của bạn vừa được đăng tải thành công"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:paddingTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/details_avatarComment"
                                    app:riv_corner_radius="100dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_marginLeft="5dp"
                                        android:padding="5dp"
                                        android:background="@drawable/radius_white"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <EditText
                                            android:paddingVertical="2dp"
                                            android:id="@+id/details_inputComment"
                                            android:inputType="text"
                                            android:paddingLeft="10dp"
                                            android:hint="Viết bình luận"
                                            android:background="@android:color/transparent"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                    <ImageButton
                                        android:visibility="gone"
                                        android:id="@+id/details_sendComment"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/comment_send"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/details_commentRecycler"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/addtocartlayout"
        app:cardCornerRadius="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="15dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="1"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
               <androidx.cardview.widget.CardView
                   android:layout_margin="5dp"
                   app:cardCornerRadius="15dp"
                   android:backgroundTint="#f6f6f9"
                   android:layout_weight="0.7"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:weightSum="3.0"
                       android:layout_gravity="center"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:layout_weight="1.0"
                           android:gravity="center"
                           android:textColor="@color/grey"
                           android:text="-"
                           android:textSize="15sp"
                           android:id="@+id/remove_button"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"/>
                       <TextView
                           android:layout_weight="1.0"
                           android:textColor="@color/grey"
                           android:gravity="center"
                           android:textSize="15sp"
                           android:text="1"
                           android:id="@+id/txt_amount"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"/>
                       <TextView
                           android:layout_gravity="center"
                           android:textSize="15sp"
                           android:gravity="center"
                           android:textColor="@color/grey"
                           android:text="+"
                           android:id="@+id/add_button"
                           android:layout_weight="1.0"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:animateLayoutChanges="true"
                    android:clickable="true"
                    android:id="@+id/addtocart_button"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#3F8142"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/avenirbook"
                            android:id="@+id/textaddtoorder"
                            android:textSize="18sp"
                            android:text="Add to order "
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/allprice"
                            android:fontFamily="@font/avenirblack"
                            android:layout_toRightOf="@id/textaddtoorder"
                            android:textSize="18sp"
                            android:text="₫0"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>