<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:paddingVertical="100dp"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:id="@+id/signin_top"
        android:gravity="center"
        android:fontFamily="@font/gothambold"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="#2E2B2B"
        android:textSize="100sp"
        android:text="Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:layout_marginTop="-25dp"
        android:gravity="center"
        android:layout_below="@id/signin_top"
        android:id="@+id/signin"
        android:fontFamily="@font/gothambold"
        android:textStyle="bold"
        android:textColor="#2E2B2B"
        android:textSize="100sp"
        android:text="order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/main"
            android:paddingHorizontal="50dp"
            android:layout_below="@id/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/grey"
                app:endIconMode="clear_text"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxBackgroundColor="#fafafa"
                app:boxStrokeColor="@android:color/transparent"
                app:hintAnimationEnabled="true"
                app:boxBackgroundMode="outline"
                android:id="@+id/username_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:hint="Phone number, username or email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#fafafa"
                app:hintTextColor="@color/grey"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxStrokeColor="@android:color/transparent"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/grey"
                app:boxBackgroundMode="outline"
                android:layout_below="@+id/username_signin"
                android:id="@+id/password_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:textColorHint="@color/grey"
                    android:inputType="textPassword"
                    android:textSize="13sp"
                    android:layout_marginTop="15dp"
                    android:hint="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/warning"
            android:layout_below="@id/password_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_error"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
            <TextView
                android:id="@+id/warning_txt"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textSize="13sp"
                android:textColor="#DD1806"
                android:text="Something went wrong"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="17dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/forgotten"
                android:fontFamily="@font/avenir_roman"
                android:padding="3dp"
                android:textSize="13sp"
                android:textColor="@color/blue"
                android:gravity="right"
                android:text="Forgotten password?"
                android:layout_below="@id/warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:layout_below="@id/warning"
            android:id="@+id/button_signin"
            android:text="Sign Up"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:backgroundTint="#3F8142"
            app:cornerRadius="200dp"
            android:drawableRight="@drawable/icon_rightarrow"
            />
        </RelativeLayout>
    <ProgressBar
        android:layout_below="@id/main"
        android:visibility="gone"
        android:indeterminateTint="@color/blue"
        android:indeterminate="true"
        android:id="@+id/progressbar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:fontFamily="@font/avenir_roman"
                    android:id="@+id/txt"
                    android:text="Don't have an account?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/toSignUp"
                    android:paddingVertical="5dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/avenirblack"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/txt"
                    android:text=" Sign Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>